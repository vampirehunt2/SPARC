using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using VH.Engine.World.Beings.AI;
using VH.Engine.World.Beings;

namespace VH.Engine.World.Beings.AI.Stimuli {

    public class AttackStimulus: Stimulus {

        public const string ID = "attack";

        private Being attacker;

        public AttackStimulus(Being attacker)
            : base(ID) {
                this.attacker = attacker;
        }

        public Being Attacker {
            get { return attacker; }
        }

    }
}
